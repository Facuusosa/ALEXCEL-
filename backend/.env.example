# =======================================================
# ALEXCEL - Variables de Entorno (EJEMPLO)
# =======================================================
# Copiar este archivo como .env y completar los valores reales

# Mercado Pago Credentials
# Producción: debe empezar con APP_USR-
# Sandbox: debe empezar con TEST-
MP_ACCESS_TOKEN=APP_USR-xxxxxxxx-xxxxxx-xxxxxxxxxx-xxxxxxxxx

# Django Secret Key (generar una nueva para producción)
DJANGO_SECRET_KEY=tu-clave-secreta-aqui-cambiar-en-produccion

# Allowed Hosts (comma separated)
# Local: localhost,127.0.0.1
# Producción: tu-app.railway.app
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend URL (for redirects after payment)
# Local: http://localhost:5173
# Producción: https://tu-dominio.vercel.app
FRONTEND_URL=http://localhost:5173

# Debug mode (False en producción)
DEBUG=True

# =======================================================
# EMAIL SETTINGS - Brevo SMTP (ex-Sendinblue)
# =======================================================
# Para obtener credenciales:
# 1. Crear cuenta en https://www.brevo.com
# 2. Ir a Settings > SMTP & API
# 3. Crear una clave SMTP

EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-login@smtp-brevo.com
EMAIL_HOST_PASSWORD=xsmtpsib-xxxxxxxxxxxx
DEFAULT_FROM_EMAIL=tu-email@gmail.com
